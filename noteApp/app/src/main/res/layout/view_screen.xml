<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent" android:layout_margin="16dp"
                                                   android:id="@+id/fragment3">

    <TextView
            android:text="TextView"
            android:layout_width="156dp"
            android:layout_height="42dp" android:id="@+id/vs_textView1"
            android:textSize="18sp" android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:text="TextView"
            android:layout_width="379dp"
            android:layout_height="44dp" android:id="@+id/vs_textView2"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/vs_textView1"
            android:layout_marginTop="20dp" android:textSize="14sp" android:textStyle="bold"/>
    <TextView
            android:text="TextView"
            android:layout_width="379dp"
            android:layout_height="510dp" android:id="@+id/vs_textView3"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/vs_textView2"/>
    <Button
            android:text="EDIT"
            android:layout_width="98dp"
            android:layout_height="48dp" android:id="@+id/vs_button"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <com.google.android.material.chip.Chip
            android:layout_width="96dp"
            android:layout_height="50dp" android:id="@+id/vs_chip"
            android:text="Important" android:textAlignment="center"
            android:textColor="#FFFFFF" app:chipSurfaceColor="#FB0303" app:chipEndPadding="2dp"
            app:chipStartPadding="2dp" app:closeIconEndPadding="2dp" android:textSize="14sp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:closeIconVisible="false" android:visibility="visible"/>
</androidx.constraintlayout.widget.ConstraintLayout>