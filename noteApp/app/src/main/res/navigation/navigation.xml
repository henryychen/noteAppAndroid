<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/navigation"
            app:startDestination="@id/fragment1">

    <fragment
            android:id="@+id/fragment1"
            android:name="com.example.startingtemplate.ListScreen"
            android:label="fragment1"
            tools:layout="@layout/list_screen">
        <action
                android:id="@+id/action_f1_to_f2"
                app:destination="@id/fragment2"/>
        <action
                android:id="@+id/action_f1_to_f3"
                app:destination="@id/fragment3"/>
    </fragment>
    <fragment
            android:id="@+id/fragment2"
            android:name="com.example.startingtemplate.ViewScreen"
            android:label="fragment2"
            tools:layout="@layout/edit_screen">
        <action
                android:id="@+id/action_f2_to_f3"
                app:destination="@id/fragment3"/>
    </fragment>
    <fragment
            android:id="@+id/fragment3"
            android:name="com.example.startingtemplate.EditScreen"
            android:label="fragment3"
            tools:layout="@layout/edit_screen">
    </fragment>
</navigation>